<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topbar"
    tools:context="com.example.mathieu.parissportifs.NewGameActivity">

    <Button
        android:id="@+id/buttonSaveGame"
        android:layout_width="231dp"
        android:layout_height="82dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bouton"
        android:gravity="center"
        android:text="Ajouter le match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHome"
        app:layout_constraintVertical_bias="0.553"
        tools:layout_editor_absoluteY="431dp" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerAway"
        android:layout_width="173dp"
        android:layout_height="39dp"
        android:layout_marginRight="8dp"
        android:prompt="@string/championship_prompt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewChoiceJourney" />

    <Spinner
        android:id="@+id/spinnerHome"
        android:layout_width="173dp"
        android:layout_height="39dp"
        android:prompt="@string/championship_prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewChoiceJourney"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/textViewChoiceJourney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonChoiceTimeTable" />

    <ImageButton
        android:id="@+id/imageButtonChoiceTimeTable"
        android:layout_width="134dp"
        android:layout_height="120dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/calendar"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

</android.support.constraint.ConstraintLayout>
