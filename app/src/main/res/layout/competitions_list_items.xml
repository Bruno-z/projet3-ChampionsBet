<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:tag="Bottom2"
        android:background="#333"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="70dp">
        <Button
            android:id="@+id/removeCompetition"
            android:src="@drawable/brassardcaptain"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="points"
            android:textColor="@color/greyList"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/eTextChampionnatName"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:textSize="16dp"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:text="Ligue 1"
            android:textColor="@color/greyList"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="170dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textViewPlayerRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textStyle="bold"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/eTextChampionnatName"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/textView9"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.754" />

        <TextView
            android:id="@+id/eTextCompetitionName"
            android:layout_width="210dp"
            android:textColorHint="@color/grey"

            android:layout_height="0dp"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/hintedittextcompetitionname"
            android:inputType="textPersonName"
            android:textColor="@color/greyList"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.829"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eTextChampionnatName" />


        <ImageView
            android:id="@+id/ivCaptain"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:background="@drawable/france"
            android:focusable="false"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/eTextChampionnatName"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/eTextCompetitionName"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>
</com.daimajia.swipe.SwipeLayout>
