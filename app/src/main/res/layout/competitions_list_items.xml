<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:tag="Bottom2"
        android:background="#333"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="120dp">
        <Button
            android:id="@+id/removeCompetition"
            android:src="@drawable/brassardcaptain"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:background="@drawable/ligue1"
            android:focusable="false"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="10dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/eTextChampionnatName"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/eTextChampionnatName" />

        <TextView
            android:id="@+id/eTextChampionnatName"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:gravity="center"
            android:textSize="10dp"
            android:inputType="textPersonName"
            android:text="Ligue 1"
            android:textColor="@color/BleuFoncéTOP"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="65dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="51dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/eTextCompetitionName"
            android:layout_width="0dp"
            android:textColorHint="@color/BleuFoncéTOP"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/hintedittextcompetitionname"
            android:inputType="textPersonName"
            android:textColor="@color/BleuFoncéTOP"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/eTextChampionnatName"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="41dp"
            app:layout_constraintRight_toLeftOf="@+id/ivCaptain"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />


        <ImageView
            android:id="@+id/ivCaptain"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:background="@drawable/drapeaufr"
            android:focusable="false"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>
</com.daimajia.swipe.SwipeLayout>
