<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewAwayTeam"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewHour"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amiens"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textViewHomeTeam"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/textViewAwayTeam"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:text="TextView"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="57dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewHomeTeam" />

    <TextView
        android:id="@+id/textViewScoreHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textViewHomeTeam"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHour" />

    <TextView
        android:id="@+id/textViewScoreAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/textViewAwayTeam"
        android:layout_marginRight="58dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHour" />

    <ImageView
        android:id="@+id/imageViewHomeTeam"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewHour"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amiens"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>